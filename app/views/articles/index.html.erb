<div class="container-fluid">
<div class="row">
	<div class="col-md-4">
<!-- form_for部分 -->
<%= form_for(@article) do |f| %>

    <h4>タイトル</h4>
	<%= f.text_field :title %>

	<h4>天気</h4>
	<%= f.text_field :weather %>

	<h4>本文</h4>
	<%= f.text_area :body %>

	<%= f.submit '投稿' %>
	<h4>画像</h4>
  	<%= f.attachment_field :image %>
  	
  	<%= f.submit '投稿' %>
	</div>
<% end %>

<div class="col-md-8">
<table class="table">
	<thead>
		<tr>
			<th>タイトル</th>
			<th>天気</th>
			<th>本文</th>
			<th>画像</th>
		</tr>
	</thead>
	<tbody>
		<% @articles.each do |article| %>
		<tr>
			<td><%=link_to article.title,"/articles/#{article.id}" %></td>
			<td><%= article.weather %></td>
			<td><%= article.body %></td>
  			<td><%= attachment_image_tag article, :image, :fill, 100, 100, format: 'jpeg' %></td>
		</tr>
	</tbody>
	<% end %>
</table>
</div>
</div>